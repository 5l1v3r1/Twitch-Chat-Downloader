{
    "client_id": null,
    "formats": {
        "default": {
            "comments": {
                "format": "[{timestamp[relative]}] <{commenter[display_name]}> {message[body]}",
                "timestamp": {
                    "relative": "%X"
                }
            },
            "output": {
                "format": "{channel[name]}/{_id}.txt",
                "timestamp": {
                    "absolute": "%x"
                }
            }
        },
        "irc": {
            "comments": {
                "action_format": "[{timestamp[relative]}] *{commenter[display_name]} {message[body]}]",
                "format": "[{timestamp[relative]}] <{commenter[irc_badge]}{commenter[display_name]}> {message[body]}",
                "timestamp": {
                    "relative": "%x"
                }
            },
            "output": {
                "format": "{channel[name]}/{_id}.log"
            }
        },
        "json": {
            "output": {
                "format": "{channel[name]}/{_id}.json"
            }
        },
        "srt": {
            "duration": 2000,
            "comments": {
                "format": "{commenter[display_name]}: {message[body]}"
            },
            "output": {
                "format": "{channel[name]}/{_id}.srt"
            }
        },
        "ssa": {
            "duration": 2000,
            "comments": {
                "format": "{message[body]}"
            },
            "output": {
                "format": "{channel[name]}/{_id}.ssa",
                "timestamp": {
                    "absolute": "%x"
                }
            },
            "events": {
                "format": "Format: Marked, Start, End, Style, Name, MarginL, MarginR, MarginV, Effect, Text",
                "dialogue": "Dialogue: Marked=0,{start},{end},Default,{name},0000,0000,0000,,{text}"
            },
            "styles": {
                "format": "Format: Name, Fontname, Fontsize, PrimaryColour, SecondaryColour, OutlineColour, BackColour, Bold, Italic, Underline, StrikeOut, ScaleX, ScaleY, Spacing, Angle, BorderStyle, Outline, Shadow, Alignment, MarginL, MarginR, MarginV, Encoding",
                "values": "Style: Default,Arial,20,65535,65535,65535,-2147483640,-1,0,1,3,0,2,30,30,30,0,0"
            }
        }
    },
    "twitch_api": "https://api.twitch.tv/v5/{path}",
    "version": "2.0.5"
}
